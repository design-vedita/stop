- var menu = ['Заявка','О компании','Новости','Публикации','Документы','Контакты'];
- var menu2 = ['Ликвидация путем банкротства','Банкротство предприятий','Банкротство физических лиц'];

mixin header()
   header
      .header-top
         .container
            .row
               .col-md-4.col-lg-3
                  .header-top__logo
                     a(href="javascript:void(0)")
                        img(src="../img/logo.png" alt="")

               .col-md-3.col-md-offset-5.col-lg-3.col-lg-push-6.col-lg-offset-0
                  .header-top__call
                     +svg('phone')
                     span  8-800-123-45-67
                     a(href="javascript:void(0)")  Перезвонить мне
               .col-md-12.col-lg-6.col-lg-pull-3.menu
                  .header-top__menu
                     nav
                        ul
                           each item in menu
                              li
                                 a(href="javascript:void(0)")= item

      .header-bottom
         .container
            .row
               .col-md-11.col-lg-9
                  ul
                     each items in menu2
                        li
                           a(href="javascript:void(0)")= items
               .col-md-1.col-lg-3
                  .header-bottom__search
                     form
                        input(type="text"
                              placeholder="Поиск")
                        input(type="submit"
                              value="")



